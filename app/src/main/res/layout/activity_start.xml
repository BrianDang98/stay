<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="65dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="350dp"

        android:src="@drawable/country_town_illustration" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="38dp"
        android:layout_marginTop="455dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="151dp"

        android:background="@drawable/btn_custom"
        android:fontFamily="@font/roboto_bold"

        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="38dp"
        android:layout_marginTop="523dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="83dp"

        android:background="@drawable/btn_custom2"
        android:fontFamily="@font/roboto_bold"

        android:text="@string/create_account"
        android:textAlignment="center"
        android:textColor="#218E84"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="596dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="15dp"

        android:clickable="true"
        android:focusable="true"

        android:fontFamily="@font/roboto"
        android:text="By creating account, I agree to Company's Terms of Service, Payments Terms of Service, Privacy Policy, and Non-discrimination Policy."
        android:textAlignment="center"
        android:textColor="#218E84"
        android:textSize="12sp" />

</RelativeLayout>