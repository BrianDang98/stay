<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/transparent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good morning Brian"

            android:fontFamily="@font/roboto_bold"

            android:layout_marginTop="26dp"
            android:layout_marginLeft="20dp"

            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp" />

        <SearchView
            android:layout_width="379dp"
            android:layout_height="47dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bar_search"
            android:paddingTop="15dp"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:queryHint="@string/search_hint"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Near your school"

                android:fontFamily="@font/roboto_bold"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"

                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/listing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/home_listing_background">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="375dp"
                    android:layout_height="182dp"
                    android:src="@drawable/listing1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="7dp"
                    android:width="352dp"

                    android:height="46dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Room For Rent Near George Brown College, Casa Loma Campus"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="5dp"
                    android:width="120dp"

                    android:height="23dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="$550/month"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>