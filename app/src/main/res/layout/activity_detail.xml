<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="true">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_centerHorizontal="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:id="@+id/sliderDots"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="252dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/viewPager" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="366dp"
                android:layout_height="63dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Room For Rent Near George Brown College, Casa Loma Campus"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/roboto_light"
                android:text="5 Somerville Avenue, Toronto, M6M4W1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15.5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/roboto_light"
                android:text="By Chris Bui"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15.5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="114.84dp"
                android:layout_height="42dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/price_tag_background"
                android:fontFamily="@font/roboto_bold"
                android:text="$550"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/viewPager" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="365dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Description"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="1 Bedroom - Shared Kitchen - Shared Washroom"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/txtAboutThisRental"
                android:layout_width="365dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="282dp"
                android:fontFamily="@font/roboto_bold"
                android:text="About this rental"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/roboto"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam bibendum nulla vitae pharetra placerat. Donec ac eros ullamcorper augue mattis gravida"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15.5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAboutThisRental" />

            <TextView
                android:id="@+id/txtAmenities"
                android:layout_width="365dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="432dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Amenities"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />

            <TextView
                android:id="@+id/txtSeeOnMap"
                android:layout_width="365dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="570dp"
                android:fontFamily="@font/roboto_bold"
                android:text="See On Map"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager" />


            <fragment
                android:id="@+id/map"
                android:layout_width="367dp"
                android:layout_height="140dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSeeOnMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>


            <TextView
                android:id="@+id/txtPolicyRule"
                android:layout_width="365dp"
                android:layout_height="38dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="52dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Policy and Rules"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</RelativeLayout>