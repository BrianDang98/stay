<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.georgebrown.comp3074.stay.ChatbotActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/myLinearLayout"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/myLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/btnTakePicture"
            android:layout_width="27dp"
            android:layout_height="25.83dp"
            android:src="@drawable/icon_send_picture"
            android:layout_marginStart="15.9dp"
            android:layout_marginTop="21.17dp"/>

        <EditText
            android:id="@+id/txtTypeMessage"
            android:layout_width="281dp"
            android:layout_height="47dp"
            android:layout_marginStart="22.1dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/background_typing_area" />

        <ImageButton
            android:id="@+id/btnSendMsg"
            android:layout_width="22.12dp"
            android:layout_height="20.04dp"
            android:layout_marginStart="25.26dp"
            android:layout_marginTop="26.09dp"
            android:src="@drawable/icon_send_msg" />
    </LinearLayout>

</RelativeLayout>
